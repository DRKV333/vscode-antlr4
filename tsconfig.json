{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "removeComments": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "inlineSources": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "alwaysStrict": true
    },
    "compileOnSave": true,
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "images"
    ]
}
